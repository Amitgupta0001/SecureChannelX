# ============================================================
# SecureChannelX - Production Environment Template
# ============================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control
# ============================================================

# ============================================================
# Application
# ============================================================
APP_NAME=SecureChannelX
NODE_ENV=production
FLASK_ENV=production

# ============================================================
# Security Secrets (MUST CHANGE in production!)
# ============================================================
# Generate strong random secrets:
# Python: python -c "import secrets; print(secrets.token_urlsafe(64))"
# Node: node -e "console.log(require('crypto').randomBytes(64).toString('base64'))"

SECRET_KEY=CHANGE_THIS_TO_SECURE_RANDOM_SECRET_KEY_64_CHARS_MIN
JWT_SECRET_KEY=CHANGE_THIS_TO_SECURE_RANDOM_JWT_SECRET_64_CHARS_MIN
JWT_ALGORITHM=HS256

# ============================================================
# Database Configuration
# ============================================================
# MongoDB
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your_secure_mongo_password_here
MONGODB_URI=mongodb://admin:your_secure_mongo_password_here@mongodb:27017/securechannelx?authSource=admin

# For Atlas (Cloud MongoDB):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/securechannelx?retryWrites=true&w=majority

# Redis
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_URL=redis://:your_secure_redis_password_here@redis:6379/0

# ============================================================
# Server Configuration
# ============================================================
# Backend
BACKEND_PORT=5000
FLASK_RUN_PORT=5000

# Frontend
FRONTEND_PORT=3000
FRONTEND_URL=http://localhost:3000

# API URLs
VITE_API_BASE_URL=http://localhost:5000
VITE_SOCKET_URL=http://localhost:5000

# Production URLs (uncomment and set for production)
# FRONTEND_URL=https://your-domain.com
# VITE_API_BASE_URL=https://api.your-domain.com
# VITE_SOCKET_URL=https://api.your-domain.com

# ============================================================
# Email Configuration (Optional but recommended)
# ============================================================
# For Gmail:
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-specific-password
MAIL_USE_TLS=true
MAIL_USE_SSL=false
MAIL_DEFAULT_SENDER=noreply@securechannelx.com

# For SendGrid:
# MAIL_SERVER=smtp.sendgrid.net
# MAIL_PORT=587
# MAIL_USERNAME=apikey
# MAIL_PASSWORD=your-sendgrid-api-key

# For AWS SES:
# MAIL_SERVER=email-smtp.us-east-1.amazonaws.com
# MAIL_PORT=587
# MAIL_USERNAME=your-ses-smtp-username
# MAIL_PASSWORD=your-ses-smtp-password

# ============================================================
# Socket.IO Configuration
# ============================================================
SOCKETIO_ASYNC_MODE=eventlet
SOCKETIO_MESSAGE_QUEUE=redis://:your_secure_redis_password_here@redis:6379/0

# ============================================================
# File Upload Configuration
# ============================================================
MAX_CONTENT_LENGTH=104857600  # 100MB in bytes
UPLOAD_FOLDER=/app/uploads
GROUP_MEDIA_FOLDER=/app/group_media

# ============================================================
# TLS/SSL Configuration (Production)
# ============================================================
USE_TLS=false
TLS_CERT_FILE=/app/certs/cert.pem
TLS_KEY_FILE=/app/certs/key.pem

# ============================================================
# Cloud Services (Optional)
# ============================================================
# AWS S3 for file storage
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=
AWS_REGION=us-east-1

# Azure Blob Storage
AZURE_STORAGE_CONNECTION_STRING=
AZURE_CONTAINER_NAME=

# ============================================================
# Monitoring & Analytics (Optional)
# ============================================================
# Sentry for error tracking
SENTRY_DSN=

# Google Analytics
GA_TRACKING_ID=

# Application Insights (Azure)
APPINSIGHTS_INSTRUMENTATION_KEY=

# ============================================================
# PWA Configuration
# ============================================================
VITE_APP_NAME=SecureChannelX
VITE_ENABLE_PWA=true

# ============================================================
# Development Only
# ============================================================
FLASK_DEBUG=false
