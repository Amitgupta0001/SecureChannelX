# ============================================================
#                   DATABASE CONFIGURATION
# ============================================================
PORT=5050
NODE_ENV=development
MONGODB_URI=mongodb://localhost:27017/SecureChannelX
JWT_SECRET=change-me-to-a-long-random-secret
ALLOWED_ORIGINS=http://localhost:3001,http://localhost:5173,http://localhost:3000
# ✅ OPTION 1: Local MongoDB (recommended for development)
MONGODB_URI=mongodb://localhost:27017/SecureChannelX
MONGODB_DB_NAME=SecureChannelX


# ============================================================
#                   JWT CONFIGURATION
# ============================================================

JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRES=24
JWT_REFRESH_TOKEN_EXPIRES=30

# ============================================================
#                   EMAIL CONFIGURATION
# ============================================================

# ✅ For testing: Disable email verification
ENABLE_EMAIL_VERIFICATION=false

# ✅ For production: Configure Gmail
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USE_TLS=true
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-16-char-app-password
# MAIL_DEFAULT_SENDER=noreply@securechannelx.com

# ============================================================
#                   REDIS CONFIGURATION (OPTIONAL)
# ============================================================

# ✅ For testing: Disable rate limiting
ENABLE_RATE_LIMITING=false

# ✅ For production: Configure Redis
# REDIS_URL=redis://localhost:6379/0

# ============================================================
#                   FEATURE FLAGS
# ============================================================

ENABLE_2FA=true
ENABLE_FILE_ENCRYPTION=true
ENABLE_SCREENSHOT_DETECTION=true

# ============================================================
#                   FILE UPLOAD CONFIGURATION
# ============================================================

MAX_UPLOAD_SIZE=100
UPLOAD_FOLDER=uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain

# ============================================================
#                   FRONTEND CONFIGURATION
# ============================================================

FRONTEND_URL=http://localhost:5173
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173

# ============================================================
#                   LOGGING
# ============================================================

LOG_LEVEL=INFO

# ============================================================
#                   TLS/SSL CONFIGURATION
# ============================================================

# Enable TLS (set to true for production)
USE_TLS=false

# TLS Certificate and Key paths
TLS_CERT_FILE=certs/cert.pem
TLS_KEY_FILE=certs/key.pem

# TLS Version (1.2 or 1.3)
TLS_MIN_VERSION=1.2
TLS_MAX_VERSION=1.3
